<div class="row">
  <h2>Deine Sachen <%= link_to '+', new_thing_path %></h2>
</div>

<div class="row">
  <ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-4">
    <% @things.each_with_index do |thing, index| %>
      <li>
        <div class="panel nomargin">
          <h3 class="name">
            <%= thing.name.upcase %>
            <!--<%= link_to thing.name, thing_path(thing), :class => 'detailslink' %>-->
          </h3>
          <p class="subsection">ZÃ¤hlerstand:</p>
          <p class="count"><%= unless thing.events_count.nil? then thing.events_count else 0 end %></p>
        </div>
        <div class="pushup cardlinks">
        <div class="row">
          <div class="small-6 columns">
            <%= link_to 'share', new_invitation_path(thing), :class => 'share leftlink', method: :get %>
          </div>
          <div class="small-6 columns"><%= link_to 'add', thing_events_path(thing), :class => 'add rightlink', method: :post %></div>
        </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>